{
  "name": "self-repair-server",
  "version": "0.10.5",
  "description": "Server package for Mozilla self-repair-server.",
  "main": "",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/self-repair-server.git"
  },
  "dependencies": {},
  "devDependencies": {
    "babel": "^4.7.1",
    "babel-core": "^4.7.1",
    "babel-loader": "^4.1.0",
    "chai": "^1.10.0",
    "es6-promises": "^1.0.9",
    "istanbul": "^0.3.5",
    "istanbul-instrumenter-loader": "^0.1.2",
    "karma-coverage": "^0.2.7",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^0.3.1",
    "karma-webpack": "^1.5.0",
    "mocha": "^2.1.0",
    "node-uuid": "^1.4.2",
    "opener": "^1.4.0",
    "thirdparty": "file:thirdparty",
    "traceur-loader": "^0.6.3",
    "webpack": "^1.4.13"
  },
  "scripts": {
    "open": "opener",
    "webpack": "webpack --module-bind traceur-loader --config webpack.single.conf.js --watch --progress",
    "test": "npm run test:unit && npm run test:built",
    "pretest:built": "npm run compile",
    "test:built": "node_modules/karma/bin/karma start karma.conf.built.js",
    "pretest:unit": "echo > test/z-ensure-coverage.js; find src -type f -name '*.js' -print0 | xargs -0 -I '{}' echo 'require(\"../{}\");' | egrep -v \"(jetpack|main.js)\" >> test/z-ensure-coverage.js",
    "test:unit": "node_modules/karma/bin/karma start karma.conf.unit.js",
    "precompile": "\\rm -rf deploy && mkdir deploy && node scripts/all-locales.js",
    "compile": "webpack",
    "postcompile": "cp scripts/s3_base/index.html deploy/index.html && cp scripts/s3_base/index.html deploy/error.html",
    "demo": "npm run compile && npm test && coverage/unit/*/index.html # open a repar in a safe way too?",
    "new-recipe": "bash scripts/new-recipe.bash"
  },
  "author": "Gregg Lind <glind@mozilla.com>",
  "license": "MPL 2"
}
