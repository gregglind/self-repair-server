{
  "name": "self-repair-server",
  "version": "0.9.2",
  "description": "Server package for Mozilla self-repair-server.",
  "main": "",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/self-repair-server.git"
  },
  "dependencies": {},
  "devDependencies": {
    "chai": "^1.10.0",
    "es6-promises": "^1.0.9",
    "generator-self-repair-recipe": "file:generator-self-repair-recipe",
    "istanbul": "^0.3.5",
    "istanbul-instrumenter-loader": "^0.1.2",
    "karma-coverage": "^0.2.7",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^0.3.1",
    "karma-webpack": "^1.5.0",
    "mocha": "^2.1.0",
    "node-uuid": "^1.4.2",
    "opener": "^1.4.0",
    "shelljs": "^0.3.0",
    "thirdparty": "file:thirdparty",
    "traceur-loader": "^0.6.3",
    "underscore": "^1.7.0",
    "webpack": "^1.4.13",
    "yo": "^1.4.5"
  },
  "scripts": {
    "webpack": "webpack --module-bind traceur-loader --config webpack.single.conf.js --watch --progress",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "npm run build ## && node_modules/karma/bin/karma start karma.conf.integration.js",
    "pretest:unit": "echo > test/z-ensure-coverage.js; find src -type f -name '*.js' -print0 | xargs -0 -I '{}' echo 'require(\"../{}\");' | egrep -v \"(jetpack|main.js)\" >> test/z-ensure-coverage.js",
    "test:unit": "node_modules/karma/bin/karma start karma.conf.unit.js",
    "prebuild": "\\rm -rf repair/* && node scripts/all-locales.js",
    "build": "webpack",
    "demo": "npm run build && npm test && coverage/unit/*/index.html # open a repar in a safe way too?",
    "recipe": "npm run recipe:new self-repair ${NAME}  &&  npm run recipe:open ${NAME}",
    "recipe:new": "yo self-repair-recipe ${NAME}",
    "recipe:open": "opener src/recipes/${NAME}/"
  },
  "author": "Gregg Lind <glind@mozilla.com>",
  "license": "MPL 2"
}
